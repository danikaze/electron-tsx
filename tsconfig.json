{
  "compilerOptions": {
    "jsx": "react-jsx",
    "incremental": true,
    "strict": false,
    "target": "ES2023",
    "module": "Preserve",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "sourceMap": true,
    "allowJs": true,
    "lib": ["DOM", "ES2023"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "plugins": [{ "name": "typescript-plugin-css-modules" }]
  },
  "include": ["**/*"],
  "exclude": ["build"]
}
