{
  "name": "electron-tsx",
  "version": "0.1.0",
  "description": "Electron boilerplate with TypeScript and React",
  "main": "out/build/main/index.mjs",
  "type": "module",
  "repository": "https://github.com/danikaze/electron-tsx",
  "author": "danikaze <danikaze@gmail.com>",
  "scripts": {
    "dev": "concurrently --kill-others -c 'auto' --names 'WP,EL' 'npm run dev:build' 'npm run dev:start'",
    "dev:build": "cross-env NODE_ENV=development NODE_OPTIONS='$NODE_OPTIONS --import=tsx' webpack",
    "dev:start": "cross-env NODE_ENV=development electronmon .",
    "dev:test": "cross-env NODE_OPTIONS='$NODE_OPTIONS --inspect --experimental-vm-modules' jest --watch",
    "test": "cross-env NODE_OPTIONS='$NODE_OPTIONS --experimental-vm-modules' jest",
    "lint": "eslint --cache .",
    "format": "prettier --write '**/*.{ts,tsx,json,js,jsx,mjs,mts,mjsx,mtsx,css,scss,sass,html,md,yml}'",
    "build": "cross-env NODE_ENV=production NODE_OPTIONS='$NODE_OPTIONS --import=tsx' webpack",
    "package": "npm run build && npm run package:bundle && npm run package:installer",
    "package:bundle": "cross-env NODE_OPTIONS='$NODE_OPTIONS --import=tsx' config/package/bundle.ts",
    "package:installer": "cross-env NODE_OPTIONS='$NODE_OPTIONS --import=tsx' config/package/installer.ts",
    "prepare": "husky"
  },
  "keywords": [
    "Electron",
    "quick",
    "start",
    "boilerplate",
    "react",
    "TypeScript",
    "jest",
    "husky",
    "githooks",
    "eslint",
    "prettier"
  ],
  "engines": {
    "node": ">=18.18.0 <19.0.0 || >=20.9.0"
  },
  "license": "MIT",
  "electronmon": {
    "patterns": [
      "!**/**",
      "out/build/main/*"
    ],
    "logLevel": "quiet"
  },
  "devDependencies": {
    "@alex_neo/jest-expect-message": "^1.0.5",
    "@electron/packager": "^18.3.3",
    "@types/electron-debug": "^2.1.0",
    "@types/electron-devtools-installer": "^2.2.5",
    "@types/jest": "^29.5.12",
    "@types/jest-expect-message": "^1.1.0",
    "@types/node": "^22.1.0",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@types/webpack": "^5.28.5",
    "@types/webpack-bundle-analyzer": "^4.7.0",
    "@types/webpack-dev-server": "^4.7.2",
    "@typescript-eslint/eslint-plugin": "^8.1.0",
    "@typescript-eslint/parser": "^8.0.1",
    "@webpack-cli/generators": "^3.0.7",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "css-loader": "^7.1.2",
    "electron": "^31.3.1",
    "electron-wix-msi": "^5.1.3",
    "electronmon": "^2.0.3",
    "eslint": "^9.9.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-unicorn": "^55.0.0",
    "html-webpack-plugin": "^5.6.0",
    "husky": "^9.1.4",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "mini-css-extract-plugin": "^2.9.0",
    "mkdirp": "^3.0.1",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "sass-loader": "^16.0.0",
    "style-loader": "^4.0.0",
    "terser-webpack-plugin": "^5.3.10",
    "ts-jest": "^29.2.4",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tsconfig-paths-webpack-plugin": "^4.1.0",
    "tsx": "^4.17.0",
    "typescript": "^5.5.4",
    "typescript-plugin-css-modules": "^5.1.0",
    "webpack": "^5.93.0",
    "webpack-bundle-analyzer": "^4.10.2",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^5.0.4",
    "webpack-merge": "^6.0.1"
  },
  "dependencies": {
    "electron-debug": "^4.0.1",
    "electron-devtools-installer": "^3.2.0",
    "electron-store": "^10.0.0",
    "nanoid": "^5.0.7",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  }
}
