{
  "name": "electron-tsx",
  "version": "0.1.0",
  "description": "Electron boilerplate with TypeScript and React",
  "main": "build/main",
  "scripts": {
    "dev": "concurrently 'npm run dev:build' 'npm run dev:start'",
    "dev:build": "cross-env NODE_ENV=development webpack",
    "dev:start": "cross-env NODE_ENV=development electronmon .",
    "lint": "cross-env NODE_ENV=development eslint ."
  },
  "repository": "https://github.com/danikaze/electron-tsx",
  "author": "danikaze <danikaze@gmail.com>",
  "keywords": [
    "Electron",
    "quick",
    "start",
    "boilerplate",
    "react",
    "TypeScript",
    "jest",
    "husky",
    "githooks",
    "eslint",
    "prettier"
  ],
  "engines": {
    "node": ">=18.18.0 <19.0.0 || >=20.9.0"
  },
  "license": "MIT",
  "electronmon": {
    "patterns": [
      "!**/**",
      "build/main/*"
    ],
    "logLevel": "quiet"
  },
  "devDependencies": {
    "@types/node": "^22.1.0",
    "@types/webpack": "^5.28.5",
    "@types/webpack-bundle-analyzer": "^4.7.0",
    "@types/webpack-dev-server": "^4.7.2",
    "@typescript-eslint/parser": "^8.0.1",
    "@webpack-cli/generators": "^3.0.7",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^31.3.1",
    "electronmon": "^2.0.3",
    "eslint": "^9.8.0",
    "html-webpack-plugin": "^5.6.0",
    "terser-webpack-plugin": "^5.3.10",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tsconfig-paths-webpack-plugin": "^4.1.0",
    "typescript": "^5.5.4",
    "webpack": "^5.93.0",
    "webpack-bundle-analyzer": "^4.10.2",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^5.0.4",
    "webpack-merge": "^6.0.1"
  }
}
